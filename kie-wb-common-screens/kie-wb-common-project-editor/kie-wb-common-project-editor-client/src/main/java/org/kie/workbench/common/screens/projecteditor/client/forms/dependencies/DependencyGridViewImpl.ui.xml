<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:bootstrap='urn:import:org.gwtbootstrap3.client.ui'
             xmlns:uf="urn:import:org.uberfire.ext.widgets.common.client.tables">

    <ui:with field="i18n" type="org.kie.workbench.common.screens.projecteditor.client.resources.i18n.ProjectEditorConstants"/>
    <ui:with field="resources" type="org.kie.workbench.common.screens.projecteditor.client.resources.ProjectEditorResources"/>

    <ui:style>

      .table {
        margin-left: 0px;
        margin-right: 0px;
      }

      .table td div {
        overflow: visible;
      }

    </ui:style>

    <bootstrap:Container fluid="true">
        <bootstrap:Row>
            <bootstrap:Column size="MD_6">
                <bootstrap:Heading size="H4" text="{i18n.Dependencies}"/>
            </bootstrap:Column>
            <bootstrap:Column offset="MD_2" size="MD_4">
                <bootstrap:ButtonGroup pull="RIGHT">
                    <bootstrap:Button ui:field="addDependencyButton" text='{i18n.Add}'/>
                    <bootstrap:Button ui:field="addFromRepositoryDependencyButton" text='{i18n.AddFromRepository}'/>
                </bootstrap:ButtonGroup>
            </bootstrap:Column>
        </bootstrap:Row>
        <bootstrap:Row>
            <bootstrap:Column size="MD_12">
                <uf:SimpleTable ui:field="dataGrid" addStyleNames="{style.table}"/>
            </bootstrap:Column>
        </bootstrap:Row>
    </bootstrap:Container>

</ui:UiBinder>
