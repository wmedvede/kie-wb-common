  <gwt:HorizontalPanel addStyleNames="{style.horizontalPanel}">

    <bhtm:Div>
      <b:Container fluid="true" ui:field="mainPanel">
        <b:Row size="MD_12">
          <b:Column size="MD_12">
            <b:Row>
              <b:Column size="MD_12">
                <gwt:FlowPanel ui:field="dataObjectPanel" addStyleNames="{style.dataObjectPanel}"/>
              </b:Column>
            </b:Row>
          </b:Column>
        </b:Row>
      </b:Container>
    </bhtm:Div>

    <bhtm:Div>
      <b:Container fluid="true" >
        <b:Row>
          <b:Column size="MD_12">
            <b:Row>
              <b:Column size="MD_12">
