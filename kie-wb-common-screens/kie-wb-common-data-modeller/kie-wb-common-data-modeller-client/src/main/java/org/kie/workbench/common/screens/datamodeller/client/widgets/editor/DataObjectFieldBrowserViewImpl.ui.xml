<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:gwt="urn:import:com.google.gwt.user.client.ui"
             xmlns:b="urn:import:com.github.gwtbootstrap.client.ui"
             xmlns:base="urn:import:com.github.gwtbootstrap.client.ui.base">


  <gwt:HTMLPanel>


    <style >

      .field-browser-container {
        background-color:  #f5f5f5;;
        padding-top: 10px;
        padding-bottom: 10px;
        padding-left: 10px;
        padding-right: 10px;

        -webkit-border-radius: 5px 5px 5px 5px;
        -moz-border-radius: 5px 5px 5px 5px;
        border-radius: 5px 5px 5px 5px;
      }

      .field-browser-navigator {
        width: 100%;
        margin: 0;
        border-bottom: 1px solid #cacaca;
        border-left: none;
        border-right: none;
      }

      .field-browser-navigator td {
        border-bottom: 1px solid #000;
        padding: 7px 3px;
        vertical-align: middle;
        white-space: nowrap;
      }

      .field-browser-navigator td:first-child {
        border-left: 0;
      }

      .field-browser-scroll-list {
        height: 460px;
        width: 100%;
        overflow-x:hidden;
        overflow-y: auto;
        relative;
        zoom: 1;
      }

      .field-browser-navigator-itemsTable {
        width: 100%;
        border-collapse: separate;
        border-spacing: 0 5px;

      }

      .field-browser-navigator-leftTD {
        border-left: 1px solid #e3e3e3;
        border-top: 1px solid #e3e3e3;
        border-bottom: 1px solid #e3e3e3;
        border-right: 0px ;
      }

      .field-browser-navigator-internalTD {
        border-top: 1px solid #e3e3e3;
        border-bottom: 1px solid #e3e3e3;
        border-left: 0px;
      }

      .field-browser-navigator-rightTD {
        border-top: 1px solid #e3e3e3;
        border-bottom: 1px solid #e3e3e3;
        border-right: 1px solid #e3e3e3;
      }


    </style>


  <base:DivWidget addStyleNames="field-browser-container">

    <gwt:HTMLPanel>
      <div style="width: 280px;">
        <div>Object name</div>
        <div style="float:right;">
          <b:Button ui:field="addFieldButton" text="add field" />
        </div>
      </div>
    </gwt:HTMLPanel>

    <base:DivWidget styleName="field-browser-scroll-list">
      <base:DivWidget ui:field="containerPanel" >
        <gwt:FlexTable ui:field="items" addStyleNames="field-browser-navigator-itemsTable table table-striped table-hover "/>
      </base:DivWidget>
    </base:DivWidget>

  </base:DivWidget>

  </gwt:HTMLPanel>

</ui:UiBinder>