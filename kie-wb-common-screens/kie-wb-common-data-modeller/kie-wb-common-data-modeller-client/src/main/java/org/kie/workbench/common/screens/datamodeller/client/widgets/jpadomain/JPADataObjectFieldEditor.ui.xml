<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:gwt="urn:import:com.google.gwt.user.client.ui"
             xmlns:b="urn:import:com.github.gwtbootstrap.client.ui"
             xmlns:uf="urn:import:org.uberfire.ext.properties.editor.client"
        >

    <ui:with field="i18n" type="org.kie.workbench.common.screens.datamodeller.client.resources.i18n.Constants"/>

    <gwt:HTMLPanel>

        <style>
            .jpa-data-object-field-editor {
            min-height: 400px !Important;
            min-width: 400px !Important;
            overflow: hidden;
            }

            .jpa-data-object-field-editor textarea {
            width: 185px !Important;
            resize: none;
            }

            .jpa-data-object-field-editor select,
            .jpa-data-object-field-editor input {
            width: 185px !Important;
            }

            .typeCheckbox input {
            width: 15px !Important;
            }

        </style>

        <div class="well jpa-data-object-field-editor">

          <uf:PropertyEditorWidget ui:field="propertyEditor"/>

        </div>
    </gwt:HTMLPanel>

</ui:UiBinder>