<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui">
    <ui:with field="i18n" type="org.kie.workbench.common.screens.social.hp.client.resources.i18n.Constants"/>

    <b:Container fluid="true">
        <b:Row>
            <b:Column size="MD_12">
                <b:Form type="HORIZONTAL">
                    <b:FieldSet>
                        <b:FormGroup>
                            <b:FormLabel addStyleNames="col-md-3">
                                <ui:text from="{i18n.Email}"/>
                            </b:FormLabel>
                            <b:Column size="MD_9">
                                <b:TextBox ui:field="emailTextBox" placeholder="{i18n.Email}"/>
                            </b:Column>
                        </b:FormGroup>
                        <b:FormGroup>
                            <b:FormLabel addStyleNames="col-md-3">
                                <ui:text from="{i18n.RealName}"/>
                            </b:FormLabel>
                            <b:Column size="MD_9">
                                <b:TextBox ui:field="realNameTextBox" placeholder="{i18n.RealName}"/>
                            </b:Column>
                        </b:FormGroup>
                    </b:FieldSet>
                </b:Form>
            </b:Column>
        </b:Row>
    </b:Container>

</ui:UiBinder>
